{
  "expo": {
    "name": "MachineStreets",
    "slug": "machine-streets",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "scheme": "machinestreets",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "assetBundlePatterns": [
      "assets/images/*",
      "assets/fonts/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "MachineStreets needs access to your location to provide better services.",
        "NSLocationAlwaysUsageDescription": "MachineStreets needs access to your location in the background.",
        "NSPhotoLibraryAddUsageDescription": "MachineStreets access to your photo library to save posters."
      }
    },
    "android": {
      "versionCode": 10,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "machinestreets"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.tamilarasanps.frontend"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "MachineStreets needs access to your photos."
        }
      ],
      "expo-secure-store",
      "expo-font",
      "expo-video",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {}
    }
  }
}
